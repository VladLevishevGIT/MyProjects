package core;

import java.util.ArrayList;

public class ArtistChooser {
	
	double num;
	
	public static ArrayList<String> artistsList = new ArrayList<String>();
	static {
		artistsList.add("Madonna");
		artistsList.add("Rihanna");
		artistsList.add("Cia");
		artistsList.add("Adele");
		artistsList.add("Beyonce");
	}

	public double artistRandomChooser (){
	//	String URL;
		num = Math.random()*5;
	//	String artist = artistsList.get((int)Math.random()*5);
	//	URL = "https://itunes.apple.com/search?term="+artist+"&limit=1";
		return num;
	}
	
	public static void main(String[] args) {
		ArtistChooser chooser = new ArtistChooser();
		System.out.println(chooser.artistRandomChooser());
	}

}
